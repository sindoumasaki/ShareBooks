<div class="container book-show">
  <div class="row show-box">
  <!--子要素にブロック要素がないとform-groupは高さ０になるため不採用、子要素にブロック要素がなくても高さが出るrowを採用-->
    <div class="col-xs-offset-1 col-xs-5 book-show-left">
      <div class="row">
        <%= attachment_image_tag @book, :book_image, size: "400x300", class: "col-xs-offset-3 col-xs-9", fallback: "no_image.jpg"%>
      </div>
      <div class="row">
        <div class="col-xs-offset-3">
          <%= link_to user_user_path(@book.user.id) do %>
            <h5><%= @book.user.nickname %>さんの投稿</h5>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-xs-offset-1 col-xs-4 book-show-right">
      <div class="row right-line">
        <div class="col-xs-2">
          <h4>title</h4>
        </div>
        <div class="col-xs-6">
          <h4><%= @book.title %></h4>
        </div>
      </div>
      <div class="row right-line">
        <div class="col-xs-2">
          <h4>digest</h4>
        </div>
        <div class="col-xs-6">
          <h4><%= @book.digest %></h4>
        </div>
      </div>
      <div class="row right-line">
        <div class="col-xs-2">
          <h4>genre</h4>
        </div>
        <div class="col-xs-6">
          <h4><%= @book.book_big_genre.big_genre_name %></h4>
        </div>
      </div>
      <div class="row">
        <%= render "layouts/comment_form", book: @book, comment: @comment %>
      </div>
      <div class="row">
        <%= link_to "内容変更", edit_user_book_path(@book), class: "btn btn-primary" %>
        <%= link_to "投稿削除", user_book_path(@book), class: "btn btn-danger", method: :delete, date:
        { confirm: '本当に削除して良いですか?',
          cancel: 'やめる',
          commit: '削除する'}, title: '削除確認' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <% @comments.each do |c| %>
      <div class="row">
        <div class="col-xs-12 comment">
          <p><%= c.comment %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 comment-favorite-btn">
          <%= render "layouts/comment_favorite", comment: c, book: @book %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>