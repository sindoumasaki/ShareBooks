<div class="container book-index">
  <div class="book-index-box-group">
  <% @books.each do |book| %>
    <div class="col-xs-6 box-back">
      <div class="book-index-box">
<!--タイトル-->
        <div class="row">
          <div class="book-index-title">
            <%= link_to user_book_path(book.id), class: "title-text" do %>
              <h3><%= book.title %></h3>
            <% end %>
          </div>
        </div>
<!--投稿した書籍の画像-->
        <div class="row box-line">
          <div class="book-index-image">
            <%= link_to user_book_path(book.id), class: "title-text" do %>
              <%= attachment_image_tag book, :book_image, size: "300x240", fallback: "noimage-book.jpg" %>
            <% end %>
          </div>
        </div>
        <div class="row box-line">
          <div class="book-index-genre">
            <%= book.book_big_genre.big_genre_name %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @books %>
  </div>
</div>
