<!--本登録のパターン-->
<% if current_user.user_status == 'ゲストユーザー' %>
  <div class="container">
    <%= form_with model: @user, url: user_user_path(@user), local: true do |f| %>
    <!--ユーザー画像-->
    <div class="box">
      <!--左側-->
      <div class="col-xs-offset-1 col-xs-5 mypage-left-box">
        <div class="row mypage-user-image">
          <div class="col-xs-offset-1">
            <%= f.attachment_field :user_image %>
          </div>
        </div>
      </div>

      <!--右側-->
      <div class="col-xs-5 mypage-right-box">
        <div class="row mypage-right-line">
          <h5>ニックネーム</h5>
        </div>
        <div class="row mypage-right-line">
          <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control", size: 30, autofocus: true, maxlength: 15 %>
        </div>
        <div class="row mypage-right-line">
          <h5>自己紹介</h5>
        </div>
        <div class="row mypage-right-line">
          <%= f.text_area :user_introduction, class: "form-control", size: "30x4" %>
        </div>
        <!--ユーザーステータス更新-->
        <%= f.hidden_field :user_status, value: '本登録済みユーザー' %>
        <div class="row mypage-right-line">
          <div class="col-xs-offset-9 col-xs-3">
            <%= f.submit "本登録", class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% elsif current_user.user_status == '本登録済みユーザー' %>
<!--ただの編集のパターン-->
  <div class="container">
    <%= form_with model: @user, url: user_user_path(@user), local: true do |f| %>
    <!--ユーザー画像-->
    <div class="box">
      <!--左側-->
      <div class="col-xs-offset-1 col-xs-5 mypage-left-box">
        <div class="row mypage-user-image">
          <div class="col-xs-offset-1">
            <%= f.attachment_field :user_image %>
          </div>
        </div>
      </div>

      <!--右側-->
      <div class="col-xs-5 mypage-right-box">
        <div class="row mypage-right-line">
          <h5>ニックネーム</h5>
        </div>
        <div class="row mypage-right-line">
          <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control", size: 30, maxlength: 15 %>
        </div>
        <div class="row mypage-right-line">
          <h5>自己紹介</h5>
        </div>
        <div class="row mypage-right-line">
          <%= f.text_area :user_introduction, class: "form-control", size: "30x4" %>
        </div>
        <div class="row mypage-right-line">
          <div class="col-xs-offset-9 col-xs-3">
            <%= f.submit "編集", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>