<div class="container">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="row">
      <div class="col-xs-12">
        <h2>サインアップ</h2>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row signup-line">
      <%= f.label :ニックネーム, class: "col-xs-4 control-label" %><br />
      <%= f.text_field :nickname, class: "col-xs-6 form-control", autofocus: true, autocomplete: "nickname" %>
    </div>
    <div class="row signup-line">
      <%= f.label :メールアドレス, class: "col-xs-4 control-label" %><br />
      <%= f.email_field :email, class: "col-xs-6 form-control", autocomplete: "email" %>
    </div>
    <div class="row signup-line">
      <%= f.label :パスワード, class: "col-xs-4 control-label" %><br />
      <%= f.password_field :password, class: "col-xs-6 form-control", autocomplete: "new-password", placeholder: "６文字以上" %>
    </div>
    <div class="row signup-line">
      <%= f.label :パスワード確認, class: "col-xs-4 control-label" %><br />
      <%= f.password_field :password_confirmation, class: "col-xs-6 form-control", autocomplete: "new-password", placeholder: "６文字以上" %>
    </div>
    <div class="row signup-line">
      <div class="col-xs-offset-9 col-xs-3">
        <div class="actions">
          <%= f.hidden_field :user_status, value: '本登録済みユーザー' %>
          <%= f.submit "サインアップ", class: "btn btn-success btn-block" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>