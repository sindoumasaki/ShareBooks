<div class="container">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="row">
      <div class="col-xs-12">
        <h2>ログイン</h2>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row login-line">
      <%= f.label :ニックネーム, class: "col-xs-4 control-label" %><br />
      <%= f.text_field :nickname, class: "col-xs-6 form-control", autofocus: true, autocomplete: "nickname" %>
    </div>
    <div class="row login-line">
      <%= f.label :メールアドレス, class: "col-xs-4 control-label" %><br />
      <%= f.email_field :email, class: "col-xs-6 form-control", autocomplete: "email" %>
    </div>
    <div class="row login-line">
      <%= f.label :パスワード, class: "col-xs-4 control-label" %><br />
      <%= f.password_field :password, class: "col-xs-6 form-control", autocomplete: "current-password" %>
    </div>
    <div class="row login-line">
      <div class="col-xs-12">
        <div class="col-xs-6 field">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %><br />
          <% end %>
        </div>
        <div class="col-xs-offset-3 col-xs-3">
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-success btn-block" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>