<% if book.book_favorited_by?(current_user) %>
  <%= link_to user_book_book_favorites_path(book), method: :delete do %>
    <i class="fas fa-heart book-heart"></i>
  <% end %>
<% else %>
  <%= link_to user_book_book_favorites_path(book), method: :post do %>
    <i class="far fa-heart book-heart"></i>
  <% end %>
<% end %>