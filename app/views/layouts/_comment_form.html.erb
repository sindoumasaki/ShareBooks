<%= form_with(model: [book, comment], url: user_book_comments_path(book), local: true) do |f| %>
<div class="row right-line">
  <div class="col-xs-offset-1">
    <%= f.text_area :comment, class: "form-control", size: "40x3"%>
  </div>
</div>
<div class="row right-line">
  <div class="col-xs-offset-8 col-xs-2">
    <%= render "layouts/book_favorite", book: @book %>
  </div>
  <div class="col-xs-2">
    <%= f.submit "コメントする" %>
  </div>
</div>
<% end %>