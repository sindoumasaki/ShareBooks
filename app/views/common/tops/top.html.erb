<div class="container">
  <div class="container-fluid">
    <!--メインビジュアル-->
    <div class="row mv-box">
      <div class="mv-text-box">
        <h4 class="mv-text">
          あなたのオススメの本を紹介・発見する</br>
          手助けになるサイトです。
      </div>
    </div>
  </div>
  <!--ログインボタン-->
  <% unless user_signed_in? %>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <%= link_to users_guest_sign_in_path, method: :post do %>
        <h2 class="login-text btn btn-info btn-block">
          さっそくはじめる</br>
          （仮登録）
        </h2>
      <% end %>

      <%= link_to users_employer_sign_in_path, method: :post do %>
        <h2 class="login-text btn btn-info btn-block">
          ゲストログイン</br>
          （閲覧用）
        </h2>
      <% end %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
    </div>
  </div>
  <!--投稿いいね上位top3-->
  <div class="row">
    <% @book_top3.each do |book| %>
    <div class="fvorites-top3-box">
      <%= book.title %>
    </div>
    <% end %>
  </div>
</div>